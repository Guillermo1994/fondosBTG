<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">

        <!-- Ensure that the naming conventions are followed -->
        <module name="PackageName">
            <property name="format" value="^[a-z][a-z0-9]*(\\.[a-z][a-z0-9]*)*$"/>
        </module>

        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="FieldName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Ensure there is no line too long -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Ensure that there is a newline at the end of the file -->
        <module name="FileTabCharacter"/>

        <!-- Ensure that there are no unnecessary imports -->
        <module name="UnusedImports"/>

        <!-- Check for Javadoc comments on classes and methods -->
        <module name="JavadocType">
            <property name="requireLineBreak" value="true"/>
        </module>

        <module name="JavadocMethod">
            <property name="requireLineBreak" value="true"/>
        </module>

        <!-- Enforce that the class has a single public constructor -->
        <module name="MultipleStringLiterals"/>
        <module name="SingleLineJavadoc"/>
    </module>
</module>
